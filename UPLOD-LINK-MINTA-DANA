    <form id="waForm" class="container">
        <div class="decoration">
            <img src="https://autoresbot.com/tmp_files/f0b25b81-52f2-4d03-a478-ebbd7b5935eb.jpg" alt="Ikon Kura-kura">
        </div>
        <div class="header">
            <h1>UPLOD LINK DANA KAGET</h1>
            <p>Masukkan Nama Pengunggah dan Link Dana Kaget di bawah.</p>
        </div>
        
        <div class="form-group">
            <label for="nama_pengunggah" class="input-label">NAMA PENGUNGGAH</label>
            <input type="text" id="nama_pengunggah" required>
        </div>

        <div class="form-group">
            <label for="link_dana" class="input-label">LINK MINTA DANA</label>
            <input type="text" id="link_dana" placeholder="https://link.dana.id/danakaget?c=..." required>
        </div>
        
        <div id="errorMsg" class="error-message">
            ‚ö†Ô∏è Link TIDAK VALID! Harus diawali dengan https://link.dana.id/danakaget
        </div>

        <div class="submit-button-wrapper">
            <button type="submit">Kirim Link ke WhatsApp üü¢</button>
        </div>
        


    </form>

    <script>
        document.getElementById('waForm').addEventListener('submit', function(e) {
            e.preventDefault(); 

            // 1. Ambil data
            const namaPengunggah = document.getElementById('nama_pengunggah').value.trim();
            const linkMinta = document.getElementById('link_dana').value.trim();
            const errorMsg = document.getElementById('errorMsg');
            

            
            // Jika valid, sembunyikan pesan error
            errorMsg.style.display = 'none';

            // 3. Susun teks pesan sesuai format yang diminta:
            const teksPesan = 
                `Uplod link ${namaPengunggah} | link minta ${namaPengunggah}\n${linkMinta}`;

            // 4. Encode dan kirim ke nomor WA tujuan
            const pesanURL = encodeURIComponent(teksPesan);
            const waLink = `https://wa.me/6285711374861?text=${pesanURL}`;
            window.open(waLink, '_blank');
        });
    </script>

